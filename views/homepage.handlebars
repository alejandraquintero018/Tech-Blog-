
{{#each post as |post| }}
<div id="cardstyling" class="container">
    <div class="card w-100">
        <div class="card-body">
            <h5 class="card-title"><a href="/post/{{post.id}}"> {{post.title}} </a></h5>
            <h6 class="card-subtitle mb-2 text-muted">{{post.user.username}} on {{format_date post.date_created}} </h6>
            <p class="card-text"><a href="/post/{{post.id}}"></a>{{post.content}}</p>
            <p>
                <a class="btn btn-primary" data-bs-toggle="collapse" href="#comment" role="button" aria-expanded="false"
                    aria-controls="collapseExample">
                    Leave a Comment
                </a>
                {{!-- ask about how and where to store the comments left behind by users --}}
            <div class="collapse" id="comment">
                <div class="input-group">
                    <textarea class="form-control" aria-label="With textarea">{{comment.comment}}</textarea>
                </div>
            </div>

        </div>
    </div>
</div>

{{/each}}